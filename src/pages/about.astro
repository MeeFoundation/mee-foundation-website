            class="relative flex w-full max-w-273.5 flex-col items-center gap-8 px-10 animation-delay-800 md:gap-12 lg:gap-16"
          >
            {
              textArray.map((text, i) => (
                <div class="overflow-hidden">
                  <p
                    class:list={[
                      'aboutText text-center text-xl font-thin leading-tight md:text-3xl lg:text-4xl xl:text-5xl xl:leading-tight',
                      {'animation-delay-800': i !== 1},
                      {
                        'animation-delay-800 lg:animation-delay-1000': i === 1,
                      },
                    ]}
                    set:html={text}
                  />
                </div>
              ))
            }
          </section>
        </section>
        <section
          class="relative flex h-auto w-screen flex-col items-center justify-center gap-8 bg-white px-10 animation-delay-800"
        >
          <div class="overflow-hidden">
            <h2
              class="marker mt-13 animate-riseIn text-3xl font-bold leading-thick md:text-4xl md:leading-normal lg:mt-13 lg:text-5xl"
            >
              Contributors
            </h2>
          </div>
          <div
            class="flex w-full flex-col flex-wrap items-center justify-center overflow-hidden"
          >
            <p
              class="aboutText leading text-center text-xl font-thin leading-tight animation-delay-800 md:text-3xl lg:text-4xl xl:text-5xl xl:leading-tight"
            >
              Coders, admins, writers, legal experts, and more
            </p>
          </div>
          <div class="flex w-full max-w-273.5 items-center overflow-hidden">
            <div
              class="flex animate-riseIn flex-wrap items-center justify-center gap-4 overflow-hidden animation-delay-1000 xl:gap-6"
            >
              {
                contributors.map((contributor) => {
                  if (!contributor.link) {
                    return (
                      <div class="leading flex h-10 w-44 flex-shrink-0 items-center justify-between rounded-lg border border-grey-300 px-4 text-center text-base font-semibold leading-tight text-grey-800 sm:w-56 xl:h-12 xl:w-60 xl:text-lg">
                        <p>{contributor.name}</p>
                      </div>
                    );
                  }
                  return (
                    <a
                      class="leading flex h-10 w-44 flex-shrink-0 items-center justify-between rounded-lg border border-grey-300 px-4 text-center text-base font-semibold leading-tight text-grey-800 sm:w-56 xl:h-12 xl:w-60 xl:text-lg"
                      href={contributor.link}
                      target="_blank"
                    >
                      <p>{contributor.name}</p>
                      {contributor.icon && (
                        <img
                          src={contributor.icon.src}
                          width="24"
                          height="24"
                          class="h-6 w-6 xl:h-7 xl:w-7"
                          alt="Decentralized Identity Foundation logo"
                        />
