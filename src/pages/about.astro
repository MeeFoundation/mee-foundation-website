            {
              principles.map((principle) => (
                <div class:list={['overflow-hidden', principle.class]}>
                  <div
                    class:list={[
                      'principle flex h-full flex-col items-start gap-6 rounded-2xl border border-solid border-brand-200 p-8 animation-delay-800',
                    ]}
                  >
                    <div class="text-2xl font-semibold not-italic leading-8 tracking-0.02 text-brand-900">
                      {principle.title}
                    </div>
                    <div
