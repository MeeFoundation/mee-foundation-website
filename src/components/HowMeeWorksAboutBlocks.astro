    <div class="w-full lg:hidden flex justify-center">
      <div class="phoneMain p-2 lg:p-4 z-10 mt-[0px] lg:mt-[40px] mb-[40px] lg:mb-[0px] border-black02 border-2 rounded-2.5xl h-[477px] w-[257px]">
        <div class="overflow-hidden rounded-xl relative h-full">
          <img id="screen1" class="phoneScreen absolute" src={billingfilled5} width="477" height="257" class=""/>
