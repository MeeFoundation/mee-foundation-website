<style>
  .floatingFigures > div {
    position: absolute;
    width: 100%;
    height: 100%;
    transform-style: preserve-3d; 
    animation-name: moveToCenter; 
    animation-duration: 120s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    /* animation-play-state: paused; */
    animation-delay: calc(((var(--scroll) * 5) + var(--i) / 2) * -10s);
    animation-fill-mode: both;
    backface-visibility: hidden; 
  }

  /* Try position icons on multiple container with different --from translate value */
  .moveS {
    --from: -200px;
  }
  .moveM {
    --from: 100px;
  }
  .moveL {
    --from: 400px;
  }
  

  @keyframes moveToCenter {
  0% {
    transform: perspective(300px) translateZ(var(--from));
    /* transform: scale(1); */
  }

  100% {
    transform: perspective(300px) translateZ(-700px);
    /* transform: scale(-1); */
  }
}
</style>


<script>
  const icons = document.querySelectorAll(".floatIcon") as NodeListOf<HTMLElement>;

