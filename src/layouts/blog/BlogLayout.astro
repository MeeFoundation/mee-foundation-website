---
import '@styles/blog.css';
import Footer from '@components/Footer.astro';
export interface Props {
  title: string;
}

const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="theme-color" content="#ffffff" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <meta
      name="description"
      content="The Mee Foundation is a nonprofit whose mission is to develop a human-centered user experience for the internet."
    />
    <meta
      property="og:title"
      content="A human-centered user experience for the internet"
    />
    <meta
      property="og:description"
      content="The Mee Foundation is a nonprofit whose mission is to develop a human-centered user experience for the internet."
    />
    <meta
      property="og:image"
      content="https://mee.foundation/mee_fav_icon.png"
    />
    <meta
      property="twitter:title"
      content="A human-centered user experience for the internet"
    />
    <meta
      property="twitter:description"
      content="The Mee Foundation is a nonprofit whose mission is to develop a human-centered user experience for the internet"
    />
    <meta
      property="twitter:image"
      content="https://mee.foundation/mee_fav_icon.png"
    />

    <title>{title}</title>
  </head>
  <body>
    <slot />
    <div
      class="max-w-screen mt-10 flex flex-col items-center justify-center overflow-hidden font-sans"
    >
      <Footer appsBtnsSize="big" mode="dark" withAppButtons={false} />
    </div>
  </body>

  {
    (
      <div
        id="connectionErrAlert"
        class="toast toast-end toast-top z-100 mt-16 hidden"
      >
        <div class="alert alert-error">
          <span>Connection attempt was unsuccessful</span>
        </div>
      </div>
    )
  }
</html>

<style is:global>
  .logo--contrast > svg {
    fill: #447f88;
  }
</style>
